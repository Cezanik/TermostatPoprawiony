@model EditUser
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <h5 class="mt-3">Role:</h5>
    @for (var i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
            <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                @Model.Roles[i].RoleName
            </label>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
</form>