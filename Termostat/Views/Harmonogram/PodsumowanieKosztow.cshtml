@model PodsumowanieKosztowViewModel

<h2>Podsumowanie kosztów aktywnych harmonogramów</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Łączne koszty</h5>
        <p class="card-text">
            <strong>Koszt dzienny:</strong> @Model.LacznyKosztDzienny.ToString("C")<br>
            <strong>Koszt tygodniowy:</strong> @Model.LacznyKosztTygodniowy.ToString("C")<br>
            <strong>Koszt miesięczny:</strong> @Model.LacznyKosztMiesieczny.ToString("C")
        </p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Powrót do listy harmonogramów</a>