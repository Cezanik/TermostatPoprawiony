@model AddWspolokatorViewModel

<h2>Dodaj współlokatora</h2>

<form asp-action="AddWspolokator">
    <input type="hidden" asp-for="MieszkanieId" />

    <div class="form-group">
        <label>Wybierz użytkownika:</label>
        <select asp-for="SelectedUserId" asp-items="Model.AvailableUsers" class="form-control">
            <option value="">-- Wybierz --</option>
        </select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Anuluj</a>
</form>