@model WyslijProsbeViewModel

<h2>Wyślij prośbę o dodanie do mieszkania</h2>

<form asp-action="WyslijProsbe">
    <div class="form-group">
        <label>Wybierz użytkownika:</label>
        <select asp-for="WybranyUzytkownikId" asp-items="Model.DostepniUzytkownicy" class="form-control">
            <option value="">-- Wybierz --</option>
        </select>
        <span asp-validation-for="WybranyUzytkownikId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Wyślij prośbę</button>
</form>